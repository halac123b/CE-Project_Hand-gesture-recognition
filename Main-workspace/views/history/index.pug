extends ../layout.pug

block content
  .content-wrapper(style='padding-top:0px;')
    // Content Header (Page header)
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 History of acquaintances
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Home
              li.breadcrumb-item.active History of entering and leaving acquaintances
      // /.container-fluid
    // Main content
    section.content
      .container-fluid
        .row
          .col-12             
            .card
              // /.card-header
              .card-body
                .row
                    table#tab-users.table.table-bordered.table-striped.table-responsive-sm
                        thead
                            tr.text-center
                                //- th Số thứ tự
                                th Ordinal number
                                th Manipulation
                        tbody
                            - var index = 1; 
                            each user, index in list
                                tr.text-center
                                    //- td= index++
                                    td=index + 1
                                    td.text-center
                                      btn.btn-search.btn.btn-primary.btn-xs(style="margin-right: 5px;",  data-id=user.id)
                                        i.ti-search.menu-icon
                                      #HistoryStudentModal.modal.fade(role='dialog' aria-labelledby='HistoryStudentModal' aria-hidden='true')
                                            .modal-dialog(role='document')
                                                .modal-content
                                                    .modal-header
                                                        h5.modal-title History of acquaintance
                                                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                                                            span(aria-hidden='true') &times;
                                                    form
                                                        .modal-body
                                                            .row
                                                                .col-md-12
                                                                    table.historyModal.table.table-bordered.table-striped
                                                                      thead
                                                                        tr.text-center
                                                                          th Image (hover)
                                                                          th Time access
                                                        .modal-footer
                                                            button.btn.btn-secondary(type='button' data-dismiss='modal') Đóng lại


                                  
block style 
    link(rel="stylesheet", href="/create/history/index.css")
block script 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@9")
    script(src="/create/history/index.js")
