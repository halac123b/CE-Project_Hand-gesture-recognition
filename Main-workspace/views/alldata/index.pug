extends ../layout.pug

block content
  .content-wrapper(style='padding-top:0px;')
    // Content Header (Page header)
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 History All
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/home') Home
              li.breadcrumb-item.active History All
      // /.container-fluid
    // Main content
    section.content
      .container-fluid
        .row
          .col-12             
            .card
              // /.card-header
              .card-body
                .row
                    table#tab-users.table.table-bordered.table-striped.table-responsive-sm
                        thead
                            tr.text-center
                                //- th Số thứ tự
                                th Ordina number                                                         
                                th Response
                                th Time access
                                th Image details
                        tbody
                            - var index = 1; 
                            each user, index in list
                                tr.text-center
                                    //- td= index++
                                    td=index + 1
                                    td=(user.Response)? "Aceept" : "Not aceept"
                                    td(class="ten")=moment(user.CreateAt).format('LLLL')
                                    td.text-center
                                      btn.btn-search.btn.btn-primary.btn-xs(style="margin-right: 5px;",  data-url=user.urlimg)
                                        i.ti-search.menu-icon
                                      #HistoryStudentModal.modal.fade
                                        .modal-dialog.modal-xl
                                            .modal-content
                                                .modal-header
                                                    h5.modal-title Image details
                                                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                                                        span(aria-hidden='true') &times;
                                                form
                                                    .modal-body
                                                      div(style='width: 90%; height:700px;display: block; margin-left: auto; margin-right: auto;')
                                                        img(alt="image" class='dataimg' style='width: 100%; height:100%; display: block; margin-left: auto; margin-right: auto;  border-radius: 0%;')
                                                    .modal-footer
                                                        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                        
block style 
    link(rel="stylesheet", href="/create/alldata/index.css")
block script 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@9")
    script(src="/create/alldata/index.js")
